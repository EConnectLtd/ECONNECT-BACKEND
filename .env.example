# Server Configuration
NODE_ENV=production
PORT=8000

# Database
DATABASE_URL=postgresql://username:password@host:5432/database_name

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# NEXTSMS Configuration
NEXTSMS_USERNAME=your_nextsms_username
NEXTSMS_PASSWORD=your_nextsms_password
NEXTSMS_SENDER_ID=ECONNECT
NEXTSMS_BASE_URL=https://messaging-service.co.tz


# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Email Configuration (if applicable)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# CORS & Socket.io
CORS_ORIGIN=https://your-frontend-url.com
SOCKET_CORS_ORIGIN=https://your-frontend-url.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here